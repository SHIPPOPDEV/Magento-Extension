        <css src="Shippop_Ecommerce::css/shippop-style.css"/>
        <css src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" src_type="url"/>
        <link src="Shippop_Ecommerce::js/shippop-javascript.js"/>
    </head>

    <body>
        <referenceContainer name="after.body.start">
            <block class="Magento\Framework\View\Element\Template" name="utility.js" />
        </referenceContainer>
        <referenceContainer name="js">
            <block class="Magento\Backend\Block\Template" template="Shippop_Ecommerce::ajax_define.phtml" name="specm_ajax_define_backend"/>
        </referenceContainer>
    </body>
</page>